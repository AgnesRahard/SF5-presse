{% extends 'base.html.twig' %}

{% block title %}Mots-clés{% endblock %}

{% block body %}
    <h1 class='text-center'>
        Liste des mots-clés
		<a href="{{ path('tag_new') }}" class='btn btn-success m-2'>
			<i class="fas fa-plus"></i>
			Ajouter un mot clé
		</a>
	</h1>

    <table class="table" id="tableOrdered">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Etiquette</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                {# <td>{{ tag.id }}</td> #}
                <td>{{ tag.etiquette }}</td>
                <td>
                    {# <a href="{{ path('tag_show', {'id': tag.id}) }}">show</a>
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}">edit</a> #}
                    <a href="{{ path('tag_edit', {'id': tag.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun mot-clé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
