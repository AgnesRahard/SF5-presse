{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1 class='text-center'>
        Liste des articles
		<a href="{{ path('article_new') }}" class='btn btn-success m-2'>
			<i class="fas fa-plus"></i>
			Ajouter un article
		</a>
	</h1>
	<table class="table" id="tableOrdered"> 
		<thead>
			<tr>
				<th>Id</th>
				<th>Titre</th>
				<th>Date parution</th>
				<th>Mots-cl√©s</th>
				<th>Cahier</th>
				<th>Page</th>
				<th>Modifier</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.id }}</td>
					<td>{{ article.titre }}</td>
					<td>{{ article.dateParution ? article.dateParution|date('Y-m-d') : '' }}</td>
					<td>
						{% for tag in article.tags %}
							<span class="badge badge-pill badge-primary mr-1">{{ tag.etiquette }}</span>
						{% endfor %}					
					</td>
					<td>{{ article.cahier }}</td>
					<td>{{ article.page }}</td>
					<td>
						{# <a href="{{ path('article_show', {'id': article.id}) }}">Voir</a> #}
						<a href="{{ path('article_edit', {'id': article.id}) }}"><i class="fas fa-pen"></i></a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">Aucun article</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
