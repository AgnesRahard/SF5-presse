{% extends 'base.html.twig' %}

{% block title %}Cahier index{% endblock %}

{% block body %}
   <h1 class='text-center'>
        Liste des cahiers
		<a href="{{ path('cahier_new') }}" class='btn btn-success m-2'>
			<i class="fas fa-plus"></i>
			Ajouter un cahier
		</a>
	</h1>

    <table class="table" id="tableOrdered">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Nom</th>
                <th>Description</th>
                <th>Modifier</th>
            </tr>
        </thead>
        <tbody>
        {% for cahier in cahiers %}
            <tr>
                {# <td>{{ cahier.id }}</td> #}
                <td>{{ cahier.nom }}</td>
                <td>{{ cahier.description }}</td>
                <td>
                    {# <a href="{{ path('cahier_show', {'id': cahier.id}) }}">show</a> #}
                    <a href="{{ path('cahier_edit', {'id': cahier.id}) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun cahier</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
