<form class='mt-2' method="post" action="{{ path('cahier_delete', {'id': cahier.id}) }}" onsubmit="return confirm('Etes-vous certain de vouloir supprimer cet enregistrement?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cahier.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>
