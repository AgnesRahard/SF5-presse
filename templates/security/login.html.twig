{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}
    <div class="container mt-5 col-12">
        <div class="row">
            <div class="col-2 offset-5">
                <h1 class="h3 mb-5 text-center">Connexion</h1>
                {% if error %}
                    <div class="alert alert-danger">
                        {{error.messageKey | trans(error.messagedata, 'security')}}
                    </div>
                {% endif %}

                <form action="{{ path('login')}}" method='post'>
                    <div class="form-group">                        
                        <input class="col" type="text" name="_username" id="username" value="{{ last_username }}" placeholder="Identifiant" required autofocus>
                    </div>
                    <div class="form-group">                        
                        <input class="col" type="password" name="_password" id="password" placeholder="Mot de passe" required>
                    </div>
                    <input type="submit" class='btn btn-primary col' value='Se connecter'>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
